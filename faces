def convert(text):
    """
    Converts :) to ğŸ™‚ and :( to ğŸ™ in the input text, and returns the modified text.
    """
    text = text.replace(":)", "ğŸ™‚")
    text = text.replace(":(", "ğŸ™")
    return text


def main():
    """
    Prompts the user for input, calls convert() on the input, and prints the result.
    """
    user_input = input("Enter some text: ")
    converted_text = convert(user_input)
    print(converted_text)


if __name__ == "__main__":
    main()
